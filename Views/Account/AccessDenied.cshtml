@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Access Denied";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card text-white bg-danger shadow-lg p-5 text-center" id="accessDeniedCard">
        <h1 class="display-4 mb-3">
            <i class="fas fa-exclamation-triangle"></i> Access Denied
        </h1>
        <p class="lead">You do not have permission to view this page.</p>
        <hr class="bg-light">
        <div class="d-flex justify-content-center gap-3">
            <a href="@Url.Action("Login", "Account")" class="btn btn-light btn-lg">
                <i class="fas fa-sign-in-alt"></i> Go to Login
            </a>
            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-light btn-lg">
                <i class="fas fa-home"></i> Return Home
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            gsap.from("#accessDeniedCard", { opacity: 0, y: -50, duration: 1, ease: "power2.out" });
        });
    </script>
}
