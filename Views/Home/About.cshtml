@{
    ViewBag.Title = "About Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section -->
<section class="hero-section about-hero position-relative">
    <div class="hero-overlay"></div>
    <div class="container hero-content text-center position-relative">
        <h1 class="display-3 text-white">About ZenStay</h1>
        <p class="lead text-white">Discover our journey, mission, and the team behind ZenStay.</p>
    </div>
</section>

<!-- Our Story Section -->
<section class="about-story py-5">
    <div class="container">
        <h2 class="section-title text-center mb-4">Our Story</h2>
        <div class="row">
            <div class="col-md-8 mx-auto">
                <p class="text-center">
                    Founded with a passion for travel and hospitality, ZenStay was born to revolutionize the hotel booking experience.
                    Our innovative platform bridges the gap between travelers seeking memorable stays and hotel owners looking for seamless management tools.
                    Every booking is more than a transaction—it’s a step towards unforgettable experiences.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Mission & Vision Section -->
<section class="mission-vision py-5 bg-light">
    <div class="container">
        <h2 class="section-title text-center mb-4">Our Mission & Vision</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="mission-box p-4">
                    <h3>Our Mission</h3>
                    <p>
                        To provide a secure, easy, and efficient hotel booking experience for travelers, while empowering hotel owners with advanced management tools.
                    </p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="vision-box p-4">
                    <h3>Our Vision</h3>
                    <p>
                        To become the world’s leading platform for hotel bookings and management, setting the standard in hospitality service across the globe.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Meet Our Team Section -->
<section class="meet-team py-5">
    <div class="container">
        <h2 class="section-title text-center mb-5">Meet Our Team</h2>
        <div class="row justify-content-center">
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="team-card text-center p-3">
                    <img src="https://via.placeholder.com/150" alt="Alice Brown" class="rounded-circle team-img mb-3">
                    <h5>Alice Brown</h5>
                    <p>CEO &amp; Founder</p>
                </div>
            </div>
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="team-card text-center p-3">
                    <img src="https://via.placeholder.com/150" alt="Mark Wilson" class="rounded-circle team-img mb-3">
                    <h5>Mark Wilson</h5>
                    <p>CTO</p>
                </div>
            </div>
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="team-card text-center p-3">
                    <img src="https://via.placeholder.com/150" alt="Sara Lee" class="rounded-circle team-img mb-3">
                    <h5>Sara Lee</h5>
                    <p>Head of Operations</p>
                </div>
            </div>
        </div>
    </div>
</section>
