@model Learn_Auth.ViewModel.InvoiceTemplateViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.1/font/bootstrap-icons.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            padding: 40px 20px;
        }

        .container {
            position: relative;
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
            padding: 30px;
            width: 800px;
            margin: auto;
            overflow: hidden;
        }

        /* Watermark Style */
        .watermark {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) rotate(-30deg);
            font-size: 80px;
            color: rgb(128 128 128);
            white-space: nowrap;
            z-index: 0; /* Adjusted z-index so watermark appears behind content */
            pointer-events: none;
            font-weight: bold;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #001f3f;
            color: #fff;
            padding: 15px 20px;
            border-radius: 12px 12px 0 0;
            position: relative;
            z-index: 1;
        }

            .header .logo {
                font-size: 24px;
                font-weight: bold;
            }

        .invoice-info {
            text-align: right;
        }

            .invoice-info h5 {
                margin-bottom: 5px;
            }

        .section {
            margin-top: 25px;
            border: 1px solid #dee2e6;
            padding: 15px;
            border-radius: 8px;
            background-color: #f8f9fa;
            position: relative;
            z-index: 1;
        }

            .section h4 {
                margin-bottom: 15px;
                color: #001f3f;
                font-size: 18px;
                font-weight: bold;
                border-bottom: 2px solid #001f3f;
                padding-bottom: 5px;
            }

        .summary {
            background-color: #f1f1f1;
            padding: 15px;
            border-radius: 8px;
        }

            .summary h5 {
                margin: 0;
            }

        .footer {
            margin-top: 30px;
            text-align: center;
            font-size: 14px;
            color: #6c757d;
        }

        .btn-print {
            background-color: #001f3f;
            color: #fff;
            border-radius: 5px;
            padding: 8px 15px;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Watermark Div -->
        @*<div class="watermark">@Model.HotelName</div>*@

        <div class="header">
            <div class="logo">ZenStay</div>
            <div class="invoice-info">
                <h5>INVOICE</h5>
                <p>No. @Model.InvoiceID</p>
            </div>
        </div>

        <!-- Customer Information -->
        <div class="section">
            <h4>Bill To:</h4>
            <p>
                <strong>@Model.CustomerName</strong><br>
                @Model.CustomerAddress<br>
                Email: @Model.CustomerEmail<br>
                Phone: @Model.CustomerPhone
            </p>
        </div>

        <!-- Booking Information -->
        <div class="section">
            <h4>Booking Details</h4>
            <p>
                <strong>Booking ID: </strong>#@Model.BookingID<br>
                <strong>Check-In: </strong>@Model.CheckInDate.ToString("MMMM dd, yyyy")<br>
                <strong>Check-Out: </strong>@Model.CheckOutDate.ToString("MMMM dd, yyyy")<br>
                <strong>Status: </strong>@Model.BookingStatus<br>
            </p>
        </div>

        <!-- Invoice Details -->
        <div class="section">
            <h4>Invoice Summary</h4>
            <p>
                <strong>Description:</strong> Room @Model.RoomNumber - @Model.HotelName<br>
                <strong>Price/Night:</strong> ₹@Model.Price<br>
                <strong>Days:</strong> @( (Model.CheckOutDate - Model.CheckInDate).Days )<br>
                <strong>Total Amount:</strong> ₹@(Model.TotalAmount * ((Model.CheckOutDate - Model.CheckInDate).Days))
            </p>
        </div>

        <!-- Summary -->
        <div class="summary d-flex justify-content-between align-items-center section">
            <h5>Grand Total:</h5>
            <h5>₹@(Model.TotalAmount * ((Model.CheckOutDate - Model.CheckInDate).Days))</h5>
        </div>

        <!-- Footer -->
        <div class="footer">
            <p><i class="bi bi-heart"></i> Thank you for choosing ZenStay! We appreciate your business.</p>
        </div>
    </div>
</body>
</html>
