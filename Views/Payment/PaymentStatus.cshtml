@model Learn_Auth.Models.Payment
@{
    ViewBag.Title = "Update Payment Status";
}
<div class="container mt-4">
    <h2 class="mb-3"><i class="bi bi-pencil-square"></i> Update Payment Status</h2>
    <ul class="list-group mb-3">
        <li class="list-group-item"><strong>Payment ID:</strong> @Model.PaymentID</li>
        <li class="list-group-item"><strong>Booking ID:</strong> @Model.BookingID</li>
        <li class="list-group-item">
            <strong>Current Status:</strong>
            <span class="badge bg-info">@Model.PaymentStatus</span>
        </li>
    </ul>
    @using (Html.BeginForm("PaymentStatus", "Payment", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("id", Model.PaymentID)
        <div class="mb-3">
            <label for="newStatus" class="form-label">New Status</label>
            <select name="newStatus" id="newStatus" class="form-select">
                <option value="Pending" @(Model.PaymentStatus == "Pending" ? "selected" : "")>Pending</option>
                <option value="Completed" @(Model.PaymentStatus == "Completed" ? "selected" : "")>Completed</option>
                <option value="Cancelled" @(Model.PaymentStatus == "Cancelled" ? "selected" : "")>Cancelled</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Update Status
        </button>
        <a href="@Url.Action("Details", new { id = Model.PaymentID })" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    }
</div>
